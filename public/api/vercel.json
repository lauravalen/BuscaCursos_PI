{
  "functions": {
    "public/api/index.php": { 
      "runtime": "vercel-php@0.6.0" 
    }
  },
  "routes": [
    {
      "src": "/.*",
      "dest": "/api/index.php"
    }
  ],
  "build": {
    "buildCommand": "npm install && npm run build && composer install"
  },
  "outputDirectory": "public" 
}